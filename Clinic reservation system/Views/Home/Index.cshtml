@{
    ViewData["Title"] = "Welcome to Our Hospital";
}

<div class="container py-5">
    <div class="text-center mb-4">
        <img src="~/images/hospital.png" class="img-fluid rounded shadow" alt="Hospital Welcome" style="max-height: 350px;" />
    </div>

    <div class="text-center">
        <h1 class="display-4 mb-3 text-primary">Welcome to Our Hospital</h1>
        <a href="/Home/AllDoctor/" class="btn btn-success">Get Start</a>
       
        <p class="lead">Thank you for choosing our hospital for your healthcare needs.</p>
        <p>We strive to provide the highest quality medical care with compassion and professionalism.</p>
    </div>

    <div class="row justify-content-center mt-5">
        <div class="col-md-4 mb-3">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body text-center">
                    <h5 class="card-title text-success">Internal Medicine</h5>
                    <p class="card-text">Comprehensive care for adult patients with various internal diseases.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body text-center">
                    <h5 class="card-title text-info">Pediatrics</h5>
                    <p class="card-text">Specialized care for infants, children, and adolescents.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body text-center">
                    <h5 class="card-title text-danger">Surgery</h5>
                    <p class="card-text">Advanced surgical procedures delivered by experienced surgeons.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-4">
        <p>If you have any questions or need assistance, please <a href="/Contact">contact us</a>.</p>
    </div>
</div>
