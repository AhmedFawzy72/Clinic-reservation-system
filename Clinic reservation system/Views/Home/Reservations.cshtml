@using Clinic_reservation_system.ViewModel
@model AllReservationsVM

@{
    ViewData["Title"] = "Reservations Management";
}

<div class="container mt-4">
    <div class="text-center mb-4">
        <h2 class="fw-bold text-primary">Reservations Management</h2>
        <p class="text-muted">View and manage all doctor appointments.</p>
    </div>

    <div class="card shadow rounded-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle text-center">
                    <thead class="table-primary">
                        <tr>
                            <th>#</th>
                            <th>Doctor</th>
                            <th>Patient</th>
                            <th>Date</th>
                            <th>Time</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.allReservations)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td class="d-flex align-items-center justify-content-center gap-2">
                                    <img src="/images/@item.Doctor.Img" alt="Doctor" width="40" height="40" class="rounded-circle border" />
                                    <span>@item.Doctor.Name</span>
                                </td>
                                <td>@item.PatientName</td>
                                <td>@item.BookingDate.ToString("yyyy-MM-dd")</td>
                                <td>@item.BookingTime</td>
                                <td>
                               <a href="/Home/Edit/@item.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
